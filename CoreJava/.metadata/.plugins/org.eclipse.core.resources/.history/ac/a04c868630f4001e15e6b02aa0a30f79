package SortAlgorithm;

public class SelectionSort {
	
	public void sortArray(int[] arr) {
		int max = arr[0];
		//int temp = 0;
		for(int i =0;i<arr.length;i++) {
			for(int j = 0;j<arr.length-i-1;j++) {
				if(max<arr[j]) {
					max = arr[j];
					arr[j] = arr[arr.length-i-1];
					 
					arr[arr.length-i-1]=max;
			
				}
				
			}
		}
	}

}
